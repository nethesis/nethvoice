FROM docker.io/library/php:8.1.18-fpm

RUN groupadd -g 991 -r asterisk && useradd -u 990 -r -s /bin/false -d /var/lib/asterisk -M -c 'Asterisk User' -g asterisk asterisk

RUN mkdir -p \
	/etc/asterisk/ \
        /etc/phonebook/sources.d/ \
        /var/lib/asterisk/.gnupg \
        /var/lib/asterisk/playback \
        /var/run/asterisk/ \
        /var/run/nethvoice/ \
        /var/www/html/freepbx/admin/modules/framework

# Download framework module
RUN curl -L https://github.com/FreePBX/framework/archive/refs/tags/release/16.0.39.tar.gz | tar xzp --strip-component=1 -C /var/www/html/freepbx/admin/modules/framework
RUN cd /var/www/html/freepbx/admin/modules/framework
RUN cp amp_conf/htdocs /var/www/html/freepbx
RUN cp amp_conf/astetc/enum.conf /etc/asterisk/
RUN cp amp_conf/astetc/musiconhold.conf /etc/asterisk/
RUN cp amp_conf/astetc/phpagi.conf /etc/asterisk/
RUN cp amp_conf/astetc/privacy.conf /etc/asterisk/
RUN cp amp_conf/astetc/queues.conf /etc/asterisk/
RUN cp amp_conf/astetc/ucc_restrict.conf /etc/asterisk/
RUN cp amp_conf/agi-bin /var/lib/asterisk/
RUN cp amp_conf/bin /var/lib/asterisk/

